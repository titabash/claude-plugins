{
  "permissions": {
    "allow": ["WebSearch", "WebFetch", "mcp__context7"],
    "deny": [
      "Bash(make migrate-dev:*)",
      "Bash(make migrate-deploy:*)",
      "Bash(make migration:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "magicuidesign",
    "shadcn",
    "playwright",
    "supabase",
    "chrome-devtools"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/format-frontend.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/format-deno.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/format-backend-py.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "cd frontend && bun run build",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "supabase@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true,
    "serena@claude-plugins-official": true,
    "cocoindex-skills@cocoindex": true,
    "example-skills@anthropic-agent-skills": true,
    "ui-design-guideline-creator@titabash-plugins": true
  }
}
